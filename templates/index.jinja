  <script type="module">
    import Reveal from "../modules/reveal/dist/reveal.esm.js";
    import RevealNotes from "../modules/reveal/plugin/notes/notes.esm.js";
    Reveal.initialize({
      hash: true,
      plugins: [RevealNotes],
      backgroundTransition: 'zoom',
    });
    Reveal.configure({ pdfMaxPagesPerSlide: 1 })
    function colorize(id) {
      const text = document.getElementById(id);
      const colors = ['red', 'orange', 'pink', 'green', 'blue', 'purple'];

      text.innerHTML = text.textContent.split('').map((char, i) => {
        return `<span style="color: ${colors[i % colors.length]}; font-family: Purisa">${char}</span>`;

      }).join('');

    }
    const tamkaIDs = ["tamka-1", "tamka-2", "tamka-3"]
    tamkaIDs.map((t) => { colorize(t) })

  </script>
